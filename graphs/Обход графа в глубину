#include <bits/stdc++.h>
using namespace std;

int main(){
//    freopen("input.txt", "r", stdin); freopen("output.txt", "w", stdout);
    int n,s,a,b;
    cin >> n >> s;
    int t = n;
    bool adj[n+1][n+1];
    for(int i = 1;i<=n;i++){
        for(int j = 1;j<=n;j++){
            cin >> adj[i][j];
        }
    }
    vector<int> visited(n+1,0);
    stack<int> st;
    st.push(s);
    visited[s] = 1;
    int sum = 1;
    while(!st.empty()){
        int v = st.top();
        st.pop();
        for(int i = 1;i<=n;i++){
            if(adj[v][i] == true && visited[i] == 0) {
                sum++;
                visited[i] = 1;
                st.push(i);
            }
        }
    }
    cout << sum;
//    fclose(stdin); fclose(stdout);
    return 0;
}
