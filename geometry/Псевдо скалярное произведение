#include <bits/stdc++.h>
using namespace std;

struct point{
    long long x;
    long long y;
};

long long pt (point a,point b){
    long long len = a.x * b.y - b.x * a.y;
    return len;
}

int main() {

    point a;
    cin >> a.x >> a.y;
    point b;
    cin >> b.x >> b.y;

    long long ans = pt(a,b);
    cout << ans << "\n";

    return 0;
}
